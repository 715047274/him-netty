<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.him.api.dao.group.GroupUserDao">

    <select id="listByGroupId" parameterType="com.lmxdawn.him.api.req.GroupUserListRequest" resultType="com.lmxdawn.him.common.entity.group.GroupUser">
        select id,group_id,uid,remark
        from `group_user`
        where group_id = #{groupId}
        limit #{offset},#{limit}
    </select>

    <select id="listByUid" parameterType="com.lmxdawn.him.api.req.UserGroupListRequest" resultType="com.lmxdawn.him.common.entity.group.GroupUser">
        select id,group_id,uid
        from `group_user`
        where uid = #{uid}
        limit #{offset},#{limit}
    </select>

    <insert id="insertGroupUser" keyProperty="id" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        insert into `group_user`(group_id,uid,remark,create_time,modified_time)
        values
        (#{groupId},
        #{uid},
        #{remark},
        #{createTime},
        #{modifiedTime})
    </insert>

    <update id="updateGroupUser" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        update `group_user`
        <set>
            <if test="remark != null">`remark`=#{remark},</if>
            <if test="lastAckMsgId != null">`last_ack_msg_id`=#{lastAckMsgId},</if>
            modified_time=#{modifiedTime}
        </set>
        where group_id = #{groupId} and uid = #{uid}
    </update>

    <delete id="deleteByGroupIdAndUid">
        delete from `group_user` where group_id = #{groupId} and uid = #{uid}
    </delete>

</mapper>