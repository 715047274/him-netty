<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.him.api.dao.user.UserOfflineMsgDao">

    <select id="listByLastMsgId" parameterType="long" resultType="com.lmxdawn.him.common.entity.user.UserOfflineMsg">
        select msg_id,receiver_uid,sender_uid,msg_type,msg_content,create_time
        from `user_offline_msg`
        where receiver_uid = #{receiverUid} and msg_id > #{lastMsgId}
        order by msg_id desc
        limit 100
    </select>

    <insert id="insertUserOfflineMsg" keyProperty="msgId" parameterType="com.lmxdawn.him.common.entity.user.UserOfflineMsg">
        insert into `user_offline_msg`(`receiver_uid`,sender_uid,msg_type,msg_content,create_time)
        values
        (#{receiverUid},
        #{senderUid},
        #{msgType},
        #{msgContent},
        #{createTime})
    </insert>
</mapper>